<h2>Plots</h2>

<% @plots.each do |plot| %>
  <div id="plot-<%= plot.id %>">
    <h3>#<%= plot.number %></h3>
    <p>My Plants:</p>
    <% plot.plants.each do |plant| %>
    <ul id="<%= plot.id %>-<%= plant.id %>">
      <li><%= plant.name %></li>
      <%= link_to 'Delete Plant', plot_plant_path(plot, plant), method: :delete%>
    </ul>
    <% end %>
  </div>
<% end %>